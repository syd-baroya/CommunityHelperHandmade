<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/googlesans</item>
    </style>

    <style name="TextInput" parent="android:style/Widget.EditText">
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="fontFamily">@font/googlesans</item>
        <item name="android:background">@drawable/search_background</item>
    </style>

    <!-- Main Button Style -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/googlesans_bold</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>

        <item name="android:background">@drawable/primary_button_background</item>
    </style>

    <style name="RedButton" parent="PrimaryButton">
        <item name="android:colorBackground">#F3D6D8</item>
        <item name="android:textColor">#B11922</item>
        <item name="android:background">@drawable/red_button_background</item>
    </style>

    <style name="BlueButton" parent="PrimaryButton">
        <item name="android:colorBackground">#D8E5EC</item>
        <item name="android:textColor">#206CAA</item>
        <item name="android:background">@drawable/blue_button_background</item>
    </style>

    <style name="GrayButton" parent="PrimaryButton">
        <item name="android:colorBackground">#E8E8E9</item>
        <item name="android:textColor">#5C5D5D</item>
        <item name="android:background">@drawable/gray_button_background</item>
    </style>

    <style name="GreenButton" parent="PrimaryButton">
        <item name="android:colorBackground">#D3EAEA</item>
        <item name="android:textColor">#0D5455</item>
        <item name="android:background">@drawable/green_button_background</item>
    </style>
    
    <style name="AppTheme.PopUpWindow" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>