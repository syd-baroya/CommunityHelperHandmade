<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:autofilledHighlight" tools:targetApi="26">@android:color/transparent</item>
    </style>

    <!-- Bottom Nav -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <!-- Text Field -->
    <style name="TextInput" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="fontFamily">@font/googlesans_medium</item>
        <item name="android:background">@drawable/background_text_field</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- Modal -->
    <style name="AppTheme.PopUpWindow" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- Spinner -->
    <style name="SpinnerTheme">
        <item name="android:textColor">#3F3F3F</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/googlesans_bold</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>

        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>

        <item name="android:background">@drawable/button_green_primary_round</item>
    </style>

    <style name="PrimaryButtonSquare" parent="PrimaryButton">
        <item name="android:background">@drawable/button_green_primary</item>
    </style>


    <style name="PrimaryButtonWhite" parent="PrimaryButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/button_white_round</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>


    <style name="RedButton" parent="PrimaryButton">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="BlueButton" parent="PrimaryButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="GrayButton" parent="PrimaryButton">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <style name="GrayOutlineButtonSmall" parent="PrimaryButton">
        <item name="android:textColor">@color/colorPrimaryDarker</item>
        <item name="android:background">@drawable/button_gray_outline</item>
    </style>

    <style name="GreenButton" parent="PrimaryButton">
        <item name="android:textColor">@color/colorPrimaryDarker</item>
        <item name="android:background">@drawable/button_green</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="OrangeButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_orange</item>

        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>
