<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="TextInput" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:autofilledHighlight" tools:targetApi="26">@color/colorPrimary</item>
        <item name="fontFamily">@font/googlesans_medium</item>
        <item name="android:background">@drawable/textfield_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Main Button Style -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/googlesans_bold</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>

        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>

        <item name="android:background">@drawable/primary_button_background</item>
    </style>
    <style name="RedButton" parent="PrimaryButton">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@drawable/red_button_background</item>
    </style>

    <style name="BlueButton" parent="PrimaryButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/blue_button_background</item>
    </style>

    <style name="GrayButton" parent="PrimaryButton">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/gray_button_background</item>
    </style>

    <style name="GreenButton" parent="PrimaryButton">
        <item name="android:textColor">@color/colorPrimaryDarker</item>
        <item name="android:background">@drawable/green_button_background</item>
        <item name="android:layout_height">44dp</item>
    </style>
    
    <style name="AppTheme.PopUpWindow" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">#3F3F3F</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

</resources>
